// imports
@import "kouto-swiss"

mainColor = #03a9f4
variations = variations = split-complements(mainColor)
bg = #E5E5E5

html,body
    height 100%
    margin 0
    background-color bg
    font-family sans-serif

.center
    text-align: center

core-header-panel
    height 100%
    overflow auto
    -webkit-overflow-scrolling touch

core-toolbar
    background mainColor
    color white

paper-toggle-button
    margin: 0 1em

    &::shadow #toggleBar[checked]
        background-color variations[0]

    &::shadow paper-radio-button::shadow #ink[checked]
        color variations[0]

    &::shadow paper-radio-button::shadow #onRadio
        background-color variations[1]

#tabs
    width 100%
    margin 0
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    text-transform uppercase

.container
    width 80%
    margin 50px auto

.card
    display block
    background white
    box-sizing border-box
    margin 1em
    padding 2em 1em
    border-radius 2px

.side
    background: bg

@media (min-width 481px)
    #tabs
        width 200px

    .container
        width 400px
